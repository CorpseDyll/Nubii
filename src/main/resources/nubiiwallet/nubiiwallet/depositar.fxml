<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nubiiwallet.nubiiwallet.Controller.DepositoController">

    <!-- Etiqueta para Deposito -->
    <Label text="Tipo de Transacción:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <!-- TextField para Deposito (no modificable) -->
    <TextField fx:id="depositoField" editable="false" text="Depósito" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <!-- Etiqueta para Fecha Actual -->
    <Label text="Fecha Actual:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <!-- TextField para Fecha Actual (inicializado con la fecha actual) -->
    <TextField fx:id="fechaActualField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Etiqueta para Monto -->
    <Label text="Monto:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <!-- TextField para ingresar el Monto -->
    <TextField fx:id="montoField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Etiqueta para Categoria -->
    <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <!-- TextField para seleccionar la Categoria -->
    <TextField fx:id="categoriaField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Etiqueta para Cuenta de Destino -->
    <Label text="Cuenta de Destino:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <!-- TextField para ingresar la Cuenta de Destino -->
    <TextField fx:id="cuentaDestinoField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- HBox para Botones -->
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <!-- Botón para Guardar -->
        <Button fx:id="guardarButton" onAction="#onGuardarButtonClick" text="Guardar" />
    </HBox>

    <!-- Aplicar márgenes al GridPane -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
