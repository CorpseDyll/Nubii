<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nubiiwallet.nubiiwallet.Controller.RetiroController">

    <!-- TextField no editable para "Retiro" -->
    <TextField fx:id="txtRetiro" editable="false" layoutX="50.0" layoutY="50.0" prefWidth="300.0" text="Retiro" />

    <!-- TextField para la fecha actual -->
    <TextField fx:id="txtFecha" editable="false" layoutX="50.0" layoutY="100.0" prefWidth="300.0" />

    <!-- TextField para ingresar el monto -->
    <Label layoutX="50.0" layoutY="150.0" text="Monto:" />
    <TextField fx:id="txtMonto" layoutX="150.0" layoutY="150.0" prefWidth="200.0" />

    <!-- TextField para ingresar la categoría -->
    <Label layoutX="50.0" layoutY="200.0" text="Categoría:" />
    <TextField fx:id="txtCategoria" layoutX="150.0" layoutY="200.0" prefWidth="200.0" />

    <!-- TextField para ingresar la cuenta de origen -->
    <Label layoutX="50.0" layoutY="250.0" text="Cuenta de Origen:" />
    <TextField fx:id="txtCuentaOrigen" layoutX="150.0" layoutY="250.0" prefWidth="200.0" />

    <!-- Botón para confirmar el retiro -->
    <Button fx:id="btnConfirmarRetiro" layoutX="150.0" layoutY="300.0" onAction="#onConfirmarRetiroButtonClick" prefWidth="150.0" text="Confirmar Retiro" />

</AnchorPane>
